@model NomasAccidentes2._0.Negocio.Informe
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutProfesional.cshtml";
}

<h2>Revision informe</h2>

@Html.ValidationSummary()

@using (Html.BeginForm())
{
    <form method="post" asp-action="Create">
        <div class="row px-2 mx-2 border">
            <div class="col-10 offset-1 mt-4">
                <div class="form-group row">
                    <div class="col-4 mt-4">
                        @Html.HiddenFor(u => u.Id_informe)
                        @Html.HiddenFor(u => u.DESCRIPCION)
                        @Html.HiddenFor(u => u.Rut_profesional, new { @class = "form-control" })
                        @Html.HiddenFor(u => u.Rut_cliente, new { @class = "form-control" })
                        @Html.LabelFor(u => u.ID_PLANILLA, "Planilla", new { @class = "form-control" })
                    </div>
                    <div class="col-8 mt-4">
                        @Html.DropDownListFor(u => u.ID_PLANILLA, new SelectList(ViewBag.plani, "Id_planilla", "Descripcion"), new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4 mt-4">
                        @Html.LabelFor(u => u.ID_ESTADO_INFO, "Estado", new { @class = "form-control" })
                    </div>
                    <div class="col-8 mt-4">
                        @Html.DropDownListFor(u => u.ID_ESTADO_INFO, new SelectList(ViewBag.estad, "ID_ESTADO_INFO", "DESCRIPCION"), new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="form-group mt-4" row>
                <div class="col-8 offset-4">
                    <div class="row ">
                        <div class="col">
                            <button type="submit" class="btn btn-primary form-control">Crear</button>
                            &nbsp;
                            @Html.ActionLink("Volver", "Index", new { @class = "btn btn-primary text-right fas fa-plus" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>

}


