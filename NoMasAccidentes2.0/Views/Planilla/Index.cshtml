@using NomasAccidentes2._0.Negocio;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Lista Check</h2>
        </div>
        <div class="col-6 text-right ">
            @Html.ActionLink("Crear planilla", "Create", new { @class = "btn btn-primary text-right fas fa-plus" })
        </div>
    </div>
    @{
        List<Planilla> planillas = (List<Planilla>)ViewBag.plani;
    }
    <table id="tblUsuario" class="table table-striped table-bordered" style="width:100%">
        <tr>
            <th> Descripcion</th>
            <th> Rut Cliente</th>
            <th> Opciones</th>
        </tr>
        @foreach (var planilla in planillas)
        {
            <tr>
                <td>@planilla.Descripcion</td>
                <td>@planilla.rut_cliente</td>
                <td>
                    <div class="text-center ">
                        @Html.ActionLink("Editar planilla", "Edit", new { id = planilla.Id_planilla }, new { @class = "btn btn-success fas fa-edit" })
                    </div>
                </td>

            </tr>
        }

    </table>
    @TempData["mensaje"]
</div>
