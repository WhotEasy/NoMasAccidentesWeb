@model NomasAccidentes2._0.Negocio.Usuario

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Modificar usuario</h2>
@Html.ValidationSummary()

@using (Html.BeginForm())
{
    <form method="post" asp-action="Create">
        <div class="row px-2 mx-2 border">
            <div class="col-10 offset-1 mt-4">
                <div class="form-group row">
                    <div class="col-4 mt-4">
                        @Html.HiddenFor(u => u.Id)
                        @Html.LabelFor(u => u.Nombre, new { @class = "form-control" })
                    </div>
                    <div class="col-8 mt-4">
                        @Html.TextBoxFor(u => u.Nombre, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4 mt-4">
                        @Html.LabelFor(u => u.Contrasena, new { @class = "form-control" })
                    </div>
                    <div class="col-8 mt-4">
                        @Html.TextBoxFor(u => u.Contrasena, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4 mt-4">
                        @Html.LabelFor(u => u.Id_rol, "Rol", new { @class = "form-control" })
                    </div>
                    <div class="col-8 mt-4">
                        @Html.DropDownListFor(u => u.Id_rol, new SelectList(ViewBag.rol, "Id", "Descripcion"), new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4 mt-4">
                        @Html.LabelFor(u => u.Id_estado, "Estado", new { @class = "form-control" })
                    </div>
                    <div class="col-8 mt-4">
                        @Html.DropDownListFor(u => u.Id_estado, new SelectList(ViewBag.uestado, "Id", "Descripcion"), new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="form-group mt-4" row>
                <div class="col-8 offset-4">
                    <div class="row ">
                        <div class="col">
                            <button type="submit" class="btn btn-primary form-control">Modificar</button>
                            &nbsp;
                            @Html.ActionLink("Volver", "Index", new { @class = "btn btn-primary text-right fas fa-plus" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>

}
