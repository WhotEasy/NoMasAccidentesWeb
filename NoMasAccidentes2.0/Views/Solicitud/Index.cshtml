@using NomasAccidentes2._0.Negocio;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-6 ">
            <h2 class="text-primary">Lista solicitudes</h2>
        </div>

    </div>
    @{
        List<Solicitudes> sol = (List<Solicitudes>)ViewBag.Solicitudes;
    }
    <table id="tblUsuario" class="table table-striped table-bordered nowrap" style="width:100%">
        <tr>
            <th> Descripcion</th>
            <th> Fecha de solicitud</th>
            <th> Fecha de cierre</th>
            <th>Resolucion</th>
            <th>Nombre cliente</th>
            <th>Tipo solicitud</th>
            <th>Estado</th>
            <th>Opciones</th>
        </tr>
        @foreach (var solicitudes in sol)
        {
    <tr>
        <td>@solicitudes.DESCRIPCION</td>
        <td>@solicitudes.FECHA_SOLICITUD</td>
        <td>@solicitudes.FECHA_CIERRE</td>
        <td>@solicitudes.RESOLUCION</td>
        <td>@solicitudes.cliente.nombreCliente</td>
        <td>@solicitudes.tiposol.Descripcion</td>
        <td>@solicitudes.estadoSolic.Descripcion</td>
        <td>
            <div class="text-center ">
                @Html.ActionLink("Asignar Profesional", "Edit", new { id = solicitudes.ID_SOLICITUD }, new { @class = "btn btn-success fas fa-edit" })


            </div>
        </td>
    </tr>
        }

    </table>
    @TempData["mensaje"]
</div>