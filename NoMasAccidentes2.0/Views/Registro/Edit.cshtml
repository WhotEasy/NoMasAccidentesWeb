@model NomasAccidentes2._0.Negocio.Solicitudes
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutProfesional.cshtml";
}


<h2>Modificar registro </h2>
@Html.ValidationSummary()

@using (Html.BeginForm())
{
    string tiempo = DateTime.Now.Date.AddDays(1).ToString("yyyy-MM-dd");
    <form method="post" asp-action="Create">
        <div class="row px-2 mx-2 border">
            <div class="col-10 offset-1 mt-4">
                <div class="form-group row">
                    <div class="col-4 mt-4">
                        @Html.HiddenFor(u => u.ID_SOLICITUD)
                        @Html.LabelFor(u => u.FECHA_CIERRE, new { @class = "form-control" })
                    </div>
                    <div class="col-8 mt-4">
                        @Html.TextBoxFor(u => u.FECHA_CIERRE, new { @class = "form-control", Type = "date",  min = tiempo  })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4 mt-4">
                        @Html.LabelFor(u => u.RESOLUCION, new { @class = "form-control" })
                    </div>
                    <div class="col-8 mt-4">
                        @Html.TextBoxFor(u => u.RESOLUCION, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4 mt-4">
                        @Html.LabelFor(u => u.ID_ESTADO_SOLICITUDES, "Estado", new { @class = "form-control" })
                    </div>
                    <div class="col-8 mt-4">
                        @Html.DropDownListFor(u => u.ID_ESTADO_SOLICITUDES, new SelectList(ViewBag.estadosol, "idEstadoSol", "Descripcion"), new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="form-group mt-4" row>
                <div class="col-8 offset-4">
                    <div class="row ">
                        <div class="col">
                            <button type="submit" class="btn btn-primary form-control">Modificar</button>
                            &nbsp;
                            @Html.ActionLink("Volver", "Index", new { @class = "btn btn-primary text-right fas fa-plus" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>

}